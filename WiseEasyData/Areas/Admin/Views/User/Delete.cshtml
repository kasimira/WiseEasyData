@using Core.Models.User
@model DeleteUserViewModel
@{
    ViewData["Title"] = "User Manager";
    Layout = "_LayoutIntro";
}

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Delete User</h3>
                <p class="text-subtitle" style="color:red">Are you sure you want to delete this exact user!</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="HomeApp" asp-action="Index">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-area="admin" asp-controller="User" asp-action="All">All User</a></li>
                        <li class="breadcrumb-item active" asp-area="admin">Delete User</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <div class="col-xl-8">
        <div class="card mb-4">
            <div class="card-header">User Details</div>
            <div class="card-body">
                <div class="row gx-3 mb-3">
                    <div class="col-md-6">
                        <p class="small mb-1">User Name: @Model.UserName</p>
                    </div>
                </div>
                <div class="row gx-3 mb-3">
                    <div class="col-md-6">
                        <p class="small mb-1">Email: @Model.Email</p>
                    </div>
                </div>
                <div class="row gx-3 mb-3">
                    <div class="col-md-6">
                        <div class="small mb-1">
                            Roles:
                            @foreach (var item in @Model.Roles)
                            {
                                <p class="small mb-1">@item</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="d-grid gap-2 col-6 mx-auto">
                <a href="/Admin/User/DeleteUser?userId=@Model.UserId" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>

