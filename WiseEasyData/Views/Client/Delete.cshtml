@using Core.Models.Client
@model DeleteClientViewModel
@{
    ViewData["Title"] = "Delete Client";
    Layout = "_LayoutIntro";
}
<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Delete Client</h3>
                <p class="text-subtitle" style="color:red">Are you sure you want to delete this exact client!</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="HomeApp" asp-action="Index">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Client" asp-action="All">All Clients</a></li>
                        <li class="breadcrumb-item active" asp-area="admin">Delete Client</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <div class="col-xl-8">
        <div class="card mb-4">
            <div class="card-header">Client Details</div>
            <div class="card-body">
                <div class="row gx-3 mb-3">
                    <div class="col-md-6">
                        <p class="small mb-1">Name: @Model.Name</p>
                    </div>
                </div>
                <div class="row gx-3 mb-3">
                    <div class="col-md-6">
                        <p class="small mb-1">The client is on the team from: @Model.HireDate</p>
                    </div>
                </div>
                <a type="button" class="btn btn-danger" role="button" href="/Client/DeleteClient?clientId=@Model.Id">Delete</a>
            </div>
        </div>
    </div>
</div>
