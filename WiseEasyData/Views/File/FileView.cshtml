@using Core.Models.File
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "All Files";
    Layout = "_LayoutIntro";
}

<div class="page-heading">
    <meta name="viewport" content="width=device-width" />
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>File</h3>
                <p class="text-subtitle text-muted">Here is the information for the file</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="HomeApp" asp-action="Index">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Employee" asp-action="All">All Files</a></li>
                        <li class="breadcrumb-item active" aria-current="page">File Info</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("ViewPDF", "File", FormMethod.Post))
    {
        <a href="javascript:;" onclick="document.forms[0].submit();">View PDF</a>
        <hr />
        @Html.Raw(TempData["Embed"])
    }
</div>
