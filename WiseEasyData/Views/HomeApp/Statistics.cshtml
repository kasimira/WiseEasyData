@using Core.Models.Dashboard
@using Infrastructure.Data
@using Microsoft.AspNetCore.Identity
@model StatisticsAppListViewModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_LayoutIntro";
}

@if (User.IsInRole("Administrator") || User.IsInRole("Editor") || User.IsInRole("Guest"))
{
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Dashboard Statistics</h3>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
                            <form class="text-muted" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="text-muted mb-0 btn btn-link">Logout</button>
                            </form>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="page-content">
        <section class="row">
            <div class="col-12 col-lg-9">
                <div class="row">
                    <div class="col-12 col-xl-8">
                        @foreach (var item in @Model.Statistics)
                        {
                             <div class="card m-b-30">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Expenses @item.Month</h5>
                            </div>
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-6 col-lg-3">
                                        <div class="border-primary border rounded text-center py-3 mb-3">
                                            <h5 class="card-title text-primary mb-1">€ @item.TotalExpenses</h5>
                                            <p class="text-primary mb-0">Expenses</p>
                                        </div>                           
                                    </div>
                                    <div class="col-6 col-lg-9">
                                        @foreach (var expense in item.Expenses)
                                        {
                                            var sumex = Math.Ceiling(expense.Amount * 100 / item.TotalExpenses);

                                            <p>@expense.CategoryName <span class="float-right">@sumex%</span></p>
                                            <div class="progress mb-3" style="height: 5px;">
                                                <div class="progress-bar" role="progressbar" style="width: @sumex%" aria-valuenow="@sumex" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        }                      
                    </div>
                </div>

            </div>

        </section>
    </div>
    @section Scripts{
<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
<script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>

<script>
    window.onload = function () {

    var chart = new CanvasJS.Chart("chartContainer", {
        theme: "light1", // "light1", "light2", "dark1", "dark2"
        exportEnabled: true,
        animationEnabled: true,
        data: [{
            type: "pie",
            startAngle: 160,
            toolTipContent: "<b>{label}</b>: {y}%",
            indexLabel: "{label} - {y}%",
            dataPoints: @Html.Raw(ViewBag.DataPoints)
        }]
    });
    chart.render();
    }
</script>
}
}
else
{
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Dashboard</h3>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
                            <form class="text-muted" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="text-muted mb-0 btn btn-link">Logout</button>
                            </form>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body" style="width: 60%;">
            <h5 class="card-title">Welcome to WiseEasyDate App</h5>
            <h6 class="card-subtitle mb-2 text-muted">Your registration was successful.</h6>
            <p class="card-text">To access the information, your account must first be approved by the administrator.</p>
            <p class="card-text">Thank you in advance for your patience.</p>

        </div>
    </div>
    <div class="d-md-flex flex-md-equal w-100 my-md-3 ps-md-3" style="width: 80%;">
        <div class="bg-primary me-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center text-white overflow-hidden">
            <div class="my-3 py-3">
                <h2 class="display-5">Our Dashboard</h2>
                <p class="lead">Easy access to all information.</p>
            </div>
            <div class="bg-light shadow-sm mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;">
                <img src="~/images/samples/jump.jpg" class="rounded mx-auto d-block" alt="...">
            </div>
        </div>
        <div class="bg-dark me-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
            <div class="my-3 p-3">
                <h2 class="display-5">Custom statisticse</h2>
                <p class="lead">Information on the current state of the company.</p>
            </div>
            <div class="bg-dark shadow-sm mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;">
                <img src="~/images/samples/water.jpg" class="rounded float-start" alt="...">
            </div>
        </div>
    </div>
}
