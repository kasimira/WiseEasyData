@using Core.Models.Salaries
@model DeleteSalaryViewModel
@{
    ViewData["Title"] = "Delete Salary";
    Layout = "_LayoutIntro";
}
<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Delete Salary</h3>
                <p class="text-subtitle" style="color:red">Are you sure you want to delete this exact salary!</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="HomeApp" asp-action="Index">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Salary" asp-action="All">All Salaries</a></li>
                        <li class="breadcrumb-item active" asp-area="admin">Delete Salary</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <div class="col-xl-8">
        <div class="card mb-4">
            <div class="card-header">Salary Details</div>
            <div class="card-body">
                <div class="row gx-3 mb-3">
                    <div class="col-md-6">
                        <p class="small mb-1">Employee Name: @Model.EmployeeName</p>
                    </div>
                    <div class="col-md-6">
                        <p class="small mb-1">Hours Worked: @Model.HoursWorked</p>
                    </div>
                    <div class="col-md-6">
                        <p class="small mb-1">Period from to: @Model.FromDate - @Model.ToDate</p>
                    </div>
                    <div class="col-md-6">
                        <p class="small mb-1">Amount: @Model.TotalAmount</p>
                    </div>
                </div>
                <a type="button" class="btn btn-danger" role="button" href="/Salary/DeleteSalary?salaryId=@Model.Id">Delete</a>
            </div>
        </div>
    </div>
</div>
